<body>

    <div class="container">
        <div class="search-bar">
            <form action="/" method="post">
                <input type="text" name="location" class="pdl-10 search" placeholder="Enter city name">
                <input type="submit" value="search" name="search_button">
            </form>
        </div>

        <div class="main">
            <img src="<%= url %>" alt="image" height="200px" width="200px">
            <h1>
                <%= temp %>Â°C
            </h1>
           <div class="main-loc">
            <h4>
                <%= loc %> ||
            </h4>
            <h4><%= main %></h4>
           </div>
            
        </div>
        <div class="features">
            <div class="humdity flex-col">
                <h5>
                    <%= humidity %>%
                </h5>
                <p>Humidity</p>
            </div>

            <div class="humdity flex-col">
                <h5>
                    <%= speed %> km/h
                </h5>
                <p>Wind speed</p>
            </div>

        </div>
    </div>

</body>

</html>